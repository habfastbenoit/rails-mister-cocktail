<div class="container">

<h1 class="text-center" style="margin-top: 80px;">Let's add a new ingredient!</h1>

<%= simple_form_for(@ingredient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
