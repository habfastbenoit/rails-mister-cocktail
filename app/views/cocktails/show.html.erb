<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url('<%= @cocktail.background_link %>');">
</div>

<div style="margin-top: 30px" class="container">
<h1 class="text-center"><%= @cocktail.name  %></h1>

<table class="table table-stripet">
  <thead>
    <tr>
      <th>Ingredients</th>
      <th>Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

        <% @doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <th><%= link_to 'Edit description', edit_dose_path(dose)%></th>
          <th><%= link_to 'delete ingredient', dose_path(dose), method: :delete%></th>


        </tr>
        <% end %>

  </tbody>
</table>

<br>



<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Remove cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>


</div>

