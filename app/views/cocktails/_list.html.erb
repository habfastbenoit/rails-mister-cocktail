<p id="notice"><%= notice %></p>

<div class="container">
<h1  style="margin-bottom: 35px" class="text-center">My Cocktails</h1>

<table class="table table-stripet">
  <thead>
    <tr>
      <th>Name</th>

      <th>Ingredients N.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= link_to cocktail.name, cocktail %></td>
        <td><%= cocktail.ingredients.count %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Remove', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
